        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CarrotMaketClone"
        android:usesCleartextTraffic="true">
        <activity android:name=".SettingActivity"></activity>
        <activity android:name=".Tab02DetailsActivity" />
        <activity android:name=".MapActivity" />
        <activity android:name=".Tab01DetailsActivity" />
        <activity android:name=".FAB02Activity" />
        <activity android:name=".NotificationActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FABActivity" />
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan" />
        <!--
        0. implementation 'com.google.android.gms:play-services-maps:17.0.0'
            라이브러리를 먼저 설치 하기 .
        -->
