<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Tab02DetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/det_civ"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:src="@drawable/moana02"/>

        <TextView
            android:id="@+id/det_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:layout_margin="8dp"
            android:textColor="#FF333333"
            android:textStyle="bold"
            android:textSize="18sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#6B000000"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:id="@+id/det_msg"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="메세지"
            android:textColor="#D5000000"
            android:padding="8dp"
            android:layout_marginTop="8dp"/>

    </ScrollView>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#6B000000"/>

    <ImageView
        android:id="@+id/det_img"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/moana02"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end">
        <ToggleButton
            android:id="@+id/tb1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/fav"
            android:textOn=" "
            android:textOff=" "
            android:onClick="cicickTb1"/>

        <ToggleButton
            android:id="@+id/tb2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/best"
            android:textOn=" "
            android:textOff=" "
            android:onClick="cicickTb2"/>

    </LinearLayout>

</LinearLayout>